<?xml version="1.0" encoding="UTF-8"?>
<template xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		  xsi:noNamespaceSchemaLocation="../../schema.xsd">

	<property name="source">default</property>
	<property name="title">Item title</property>
	<property name="description">Description</property>
	<property name="price">Price</property>

	<button padding="5px"
			display="grid"
			column_gap="20px"
			id="head"
			grid_template_columns="(1, 100px)(1, auto)">

		<node watch="head"
			  border="0"
			  hover:border_radius="0"
			  hover:background="rgb(0.3,0.1,0.3)"
			  background="rgb(0.1,0.1,0.3)"
			  border_radius="10px">

			<img src="{source}"
				 width="100px"/>
			<text font_size="10"
				  left="4%"
				  bottom="4%"
				  position="absolute">{source}</text>
		</node>

		<node row_gap="5px"
			  padding="10px 5px"
			  border_radius="10px"
			  background="rgb(0.1,0.1,0.3)"
			  flex_direction="column">
			<text font_size="25">{source}</text>
			<text>{title}</text>
			<text>{description}</text>
			<text>{price}</text>
		</node>

	</button>
</template>
